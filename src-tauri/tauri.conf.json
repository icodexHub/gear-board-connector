{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gear-board-connector",
  "version": "0.1.0",
  "identifier": "com.gear-board.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "splashscreen",
        "url": "../src/pages/Splash.html",
        "decorations": false,
        "transparent": false,
        "width": 600,
        "height": 400,
        "resizable": false,
        "visible": true,
        "center": true
      },
      {
        "label": "main",
        "url": "index.html",
        "title": "Gear Board Connector",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false
        
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../src/assets/tray.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
     "autostart": null
  }
}
